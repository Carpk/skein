<div class="container centered">

  <div class="game-map">
    <span class= "hidden" id= "blue"><%= render partial: "blue" %></span>
    <span class= "hidden" id= "green"><%= render partial: "green" %></span>
    <span class= "hidden" id= "orange"><%= render partial: "orange" %></span>
    <span class= "hidden" id= "red"><%= render partial: "red" %></span>
    <span class= "hidden" id= "yellow"><%= render partial: "yellow" %></span>
  </div>


  <div class="text-field centered">

  </div>

  <div class= "input-field centered">
    <%= form_tag("/welcome", method: "post", id: 'user-input') do %>
      <%= text_field_tag 'direction' %>
    <% end %>
  </div>

  <%= link_to "New Game", new_welcome_path, class: "game-button",form: { "data-type" => "json" } %>
</div>
